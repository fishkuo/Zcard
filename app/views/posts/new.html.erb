<h1>新增文章</h1>

<%= form_for(@post, url: board_posts_path(@board)) do |form| %>

  <div class="field form-floating">
    <%= form.label "文章標題" ,class:"form-label"%>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label "文章內容",class:"form-label" %>
    <%= form.text_area :content , class:"form-control",style:"height:300px"%>
  </div>

  <%= form.submit class:"btn btn-dark"%>
<% end %>