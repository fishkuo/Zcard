<h1 style="margin-top:30px;">編輯個人資料</h1>

<%= form_for(current_user, url: users_path, method: 'put') do |form| %>

  <div class="fields">
    <%= form.label :email ,class:"form-label"%>
    <%= form.text_field :email,class:"form-control" %>
  </div>

  <div class="fields">
    <%= form.label :nickname, '暱稱',class:"form-label" %>
    <%= form.text_field :nickname,class:"form-control" %>
  </div>

  <%= form.submit '更新' ,class:"btn btn-dark", style:"margin-top:30px"%>
<% end %>
